


# Set access point

AdHocNetwork(){
  echo 'Configure AdHoc Network'
  # turn off dns and hostapd
  sudo systemctl stop dnsmasq
  sudo systemctl stop hostapd

  echo 'Move files'
  # Move files to configure static ip
  mv ./etc/dhcpcd.conf /etc/dhcpcd.conf
  mv ./etc/network/interfaces /etc/network/interfaces
  # Configure hostapd
  mv ./etc/hostapd/hostapd.conf
  mv ./etc/default/hostapd /etc/default/hostapd
  # Configure dnsmasq
  mv ./dnsmasq.conf /etc/dnsmasq.conf
  # Configure ipv4 forwarding
  mv ./etc/systcl.conf /etc/systcl.conf
  # Set up ipv4 forwarding
  sudo iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE
  sudo iptables -A FORWARD -i eth0 -o wlan0 -m state --state RELATED,ESTABLISHED -j ACCEPT
  sudo iptables -A FORWARD -i wlan0 -o eth0 -j ACCEPT

  #Restart dhcpcd daemon
  service dhcpcd restart

  # Set up wlan0 configuration
  sudo ifdown wlan0
  sudo ifup wlan0

}

# Check WiFi connection
CheckWiFi(){
  echo "Checking WiFi connection"
}
